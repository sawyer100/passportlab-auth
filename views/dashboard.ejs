<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3">Welcome <%= user.name %></p>
<% if (user.role === 'admin') { %>
  <hr>
  <p>Current Active Sessions:</p>
  <% if (sessions) { %>
    <!-- EJs too hard i just told cahtGpt to make this -->
     <!-- also ik its not the same style as in ur notion demo
     cause chatgpt  make this -->
  <% Object.entries(sessions).forEach(([sid, s]) => { %>
    Session: <%= sid %><br>
    userID: <%= s.passport?.user ?? "none" %><br>
  <form method="POST" action="/sessions/<%= encodeURIComponent(sid) %>/revoke" style="display:inline">
    <button type="submit">Revoke Session</button>
  </form>

    <br><br>
  <% }) %>
<% } else { %>
  <p>No sessions.</p>
<% } %>

<% } %>

<a href="/auth/logout" class="btn btn-secondary">Logout</a>
